<div class="posts">
  <% @posts.each do |post| %>
   <%= link_to (image_tag post.image.url(:small)) %>
  <h2>
    <%= link_to post.title, post %>
  </h2>
  <p>
    <%= post.comments.count %> <span>Comments</span>
  </p>
  <p>
    <%= post.get_likes.size %>
    <span>Likes</span>
  </p>
  <hr>
  <%end%>
  <%= link_to "New post", new_post_path %>
</div>